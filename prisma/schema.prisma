generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum UserRole {
  OWNER
  DINER
}

/** Auth.js models (unchanged) */
model User {
  id            String   @id @default(cuid())
  name          String?
  email         String?  @unique
  emailVerified DateTime?
  image         String?

  role          UserRole?

  accounts      Account[]
  sessions      Session[]
  reservations  Reservation[]
  restaurants   Restaurant[] @relation("OwnerRestaurants")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Restaurant {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  description String?
  imageUrl  String?
  address   String?
  phone     String?
  timeSlotIntervalMinutes Int @default(30)
  createdAt DateTime @default(now())

  ownerId   String
  owner     User @relation("OwnerRestaurants", fields: [ownerId], references: [id], onDelete: Cascade)

  tables    Table[]
  categories MenuCategory[]
  hours     OpeningHour[]
  reservations Reservation[]
}

model Table {
  id           String @id @default(cuid())
  restaurantId String
  name         String
  capacity     Int

  restaurant Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  reservations Reservation[]
}

model MenuCategory {
  id           String @id @default(cuid())
  restaurantId String
  name         String
  sort         Int     @default(0)

  restaurant Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  items      MenuItem[]
}

model MenuItem {
  id           String  @id @default(cuid())
  categoryId   String
  name         String
  description  String?
  priceCents   Int
  isAvailable  Boolean @default(true)

  category MenuCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  preorderItems PreorderItem[]
}

model OpeningHour {
  id           String @id @default(cuid())
  restaurantId String
  weekday      Int // 0=Sunday ... 6=Saturday
  openMinutes  Int // minutes from 00:00
  closeMinutes Int // minutes from 00:00

  restaurant Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
}

enum ReservationStatus {
  PENDING
  CONFIRMED
  CANCELLED
}

model Reservation {
  id           String   @id @default(cuid())
  restaurantId String
  userId       String
  tableId      String?
  startTime    DateTime
  durationMinutes Int   @default(90)
  partySize    Int
  status       ReservationStatus @default(PENDING)
  specialRequests String?
  createdAt    DateTime @default(now())

  restaurant Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  table      Table?     @relation(fields: [tableId], references: [id])
  preorderItems PreorderItem[]
}

model PreorderItem {
  id            String @id @default(cuid())
  reservationId String
  menuItemId    String
  quantity      Int    @default(1)
  note          String?

  reservation Reservation @relation(fields: [reservationId], references: [id], onDelete: Cascade)
  menuItem    MenuItem    @relation(fields: [menuItemId], references: [id], onDelete: Cascade)
}
